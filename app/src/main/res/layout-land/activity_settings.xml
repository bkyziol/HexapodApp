<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bkyziol.hexapod.activity.SettingsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:color/black"
        android:id="@+id/cameraView"
        android:translationZ="1dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90px"
        android:layout_height="52px"
        android:src="@drawable/exit"
        android:id="@+id/exitButtonView"
        android:translationZ="3dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/cameraView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@drawable/step_length"
        android:layout_marginBottom="11dp"
        android:id="@+id/imageView1"
        android:translationZ="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/exitButtonView"
        android:layout_alignEnd="@+id/exitButtonView" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rabbit"
        android:layout_marginBottom="31dp"
        android:id="@+id/imageView2"
        android:translationZ="3dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/turtle"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView3"
        android:translationZ="3dp"
        android:layout_above="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/camera"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/screenView"
        android:layout_alignStart="@+id/screenView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/imageView4"
        android:translationZ="3dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/video"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:id="@+id/imageView5"
        android:translationZ="3dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fps"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:id="@+id/imageView6"
        android:translationZ="3dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cameraSpeedBar"
        android:translationZ="3dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:id="@+id/videoQualityBar"
        android:translationZ="3dp"/>

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:id="@+id/videoFPSBar"
        android:translationZ="3dp"/>

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/strideLengthBar"
        android:translationZ="3dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/speedSlowBar"
        android:layout_alignStart="@+id/speedSlowBar" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/speedFastBar"
        android:translationZ="3dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/speedSlowBar"
        android:translationZ="3dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/menuSettingsBackgroundView"
        android:translationZ="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
